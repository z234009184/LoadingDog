/**index.wxss**/

.container {
  background-color: #eee;
}

.topview {
  align-self: stretch;
  margin: 30rpx;
  display: flex;
  flex-direction: column;
  border-radius: 10rpx;
  background-color: white; 
}

.topview .cell {
  margin: 0 40rpx;
}


.topview .cell .top {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: start;
  margin: 40rpx 0;
}

.topview .cell .top .img {
  width: 45rpx;
}

.topview .cell .top .title {
  font-size: 28rpx;
  margin-left: 40rpx;
}

.topview .cell .top .flex {
  flex-grow: 1;
}

.topview .cell .top .arrow {
  width: 20rpx;
  height: 20rpx;
  border: 2rpx solid #ddd;
  border-left: none;
  border-bottom: none;
  rotate: 45deg;
}

.topview .cell .line {
  width: 100%;
  height: 2rpx;
  background-color: #f3f3f3;
}


.cu-btn {
    margin: 70rpx;

    height: 100rpx;
    width: 80%;
    font-size: 34rpx;
    font-weight: bold;
}


.cu-list.menu-avatar>.cu-item {
  justify-content: flex-start;
}
.cu-list.menu-avatar>.cu-item>.cu-title {
  margin-left: 110rpx
}

.version-cell {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-self: stretch;
  align-items: flex-start;
}

.version-title {
  margin: 30rpx 30rpx;
}

.version-divider {
  width: 100%;
  height: 2rpx;
  background-color: #eee;
}

.indexes {
  position: relative;
}

.indexBar {
  position: fixed;
  right: 0px;
  bottom: 0px;
  padding: 20rpx 20rpx 20rpx 60rpx;
  display: flex;
  align-items: center;
}

.indexBar .indexBar-box {
  width: 40rpx;
  height: auto;
  background: #fff;
  display: flex;
  flex-direction: column;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.1);
  border-radius: 10rpx;
}

.indexBar-item {
  flex: 1;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #888;
}

movable-view.indexBar-item {
  width: 40rpx;
  height: 40rpx;
  z-index: 9;
  position: relative;
}

movable-view.indexBar-item::before {
  content: "";
  display: block;
  position: absolute;
  left: 0;
  top: 10rpx;
  height: 20rpx;
  width: 4rpx;
  background-color: #f37b1d;
}

.indexToast {
  position: fixed;
  top: 0;
  right: 80rpx;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  margin: auto;
  color: #fff;
  line-height: 100rpx;
  text-align: center;
  font-size: 48rpx;
}