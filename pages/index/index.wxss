/**index.wxss**/

.container {
  background-color: #eee;
}

.topview {
  align-self: stretch;
  margin: 30rpx;
  display: flex;
  flex-direction: column;
  border-radius: 10rpx;
  background-color: white; 
}

.topview .cell {
  margin: 0 40rpx;
}


.topview .cell .top {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: start;
  margin: 40rpx 0;
}

.topview .cell .top .img {
  width: 45rpx;
}

.topview .cell .top .title {
  font-size: 28rpx;
  margin-left: 40rpx;
}

.topview .cell .top .flex {
  flex-grow: 1;
}

.topview .cell .top .arrow {
  width: 20rpx;
  height: 20rpx;
  /* background-color: red; */
  border: 2rpx solid #ddd;
  border-left: none;
  border-bottom: none;
  rotate: 45deg;
}

.topview .cell .line {
  width: 100%;
  height: 2rpx;
  background-color: #f3f3f3;
}


.find-btn {
  align-self: stretch;
  margin: 70rpx;
  height: 100rpx;
  border-radius: 20rpx;
  background-color: #FFB367;
  color: white;
  font-weight: bold;
  text-align: center;
  line-height: 100rpx;
  font-size: 30rpx;
}