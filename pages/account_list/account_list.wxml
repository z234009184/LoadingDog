<!--pages/account_list/account_list.wxml-->
<view class="container">
    <block wx:for="{{ listMap }}" wx:key>
        <view class="cell">
                <view class="left">  
                    <block wx:if="{{ item.type == 1 }}">
                        <text class="title">发布安装图</text>    
                    </block>
                    <block wx:elif="{{ item.type == 2 }}">
                        <text class="title">其他用户购买我的安装图</text>    
                    </block>
                    <block wx:elif="{{ item.type == 3 }}">
                        <text class="title">提现</text>    
                    </block>
                    <block wx:else>
                        <text class="title">其他</text>    
                    </block>
                    <text class="time">{{ item.createTime }}</text>
                </view>

                <block wx:if="{{ item.type == 3 }}">
                    <text class="price" style="color:red;">- {{ item.fee }} 元</text>    
                </block>  
                <block wx:else>
                    <text class="price">+ {{ item.fee }} 元</text>    
                </block>  
        </view>
    </block>
</view>

<view class="empty-wraper" wx:if="{{ listMap.length == 0 }}">
    <image src="/assets/imgs/empty_data.png" mode="widthFix"/>
    <text>暂无数据</text>
</view>
